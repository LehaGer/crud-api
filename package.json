  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node .",
    "start:dev": "nodemon -e ts -w src -x npm run start:dev:tsnode",

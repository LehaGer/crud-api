    "lint": "eslint --cache --ext .ts .",
    "lint:fix": "eslint --cache --ext .ts . --fix",
    "test": "jest --config=jest.config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LehaGer/crud-api.git"
  },
  "author": "https://github.com/LehaGer",
